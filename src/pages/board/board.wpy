                wepy.request({
                    url: appUrl + "/event/getEventType", //开发者服务器接口地址",
                    data: {}, //请求的参数",
                    method: 'GET',
                    dataType: 'json', //如果设为json，会尝试对返回的数据做一次 JSON.parse
                    success: res => {
                        // console.log(res)
                        this.temp = res.data.data
                        this.$apply()
                        // console.log('the temp var')
                        // console.log(this.temp)
                        return resolve()
                    },
                    fail: () => {},
                    complete: () => {}
                });
            })
