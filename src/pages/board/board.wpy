                    // this.getAllEventsByUserId();
                    wepy.$instance.globalData.eventId = eventId
                    wepy.navigateTo({
                        url: '../event/eventDetail',
                        success: function() {
                            var page = getCurrentPages().pop();
                            if (page == undefined || page == null) return;
                            // page.onLoad();
                        }
                    });
                },
                fail: () => {},
                complete: () => {}
            });
        }
